{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es6",
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,

        "moduleResolution": "node",
        "outDir": "public"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./build",
        "./public" 
    ],
    "baseUrl": "./src",
    "paths": {
        "@components/*": ["Components/*"]
    }
}